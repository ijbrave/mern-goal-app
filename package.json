{
	"name": "mern-goal-app",
	"version": "1.0.0",
	"description": "Goal setter app for mern tutorial",
	"main": "server.ts",
	"scripts": {
		"start": "node dist/backend/server",
		"build": "tsc",
		"server": "nodemon backend/server",
		"client": "npm run dev --prefix frontend",
		"dev": "concurrently \"npm run server\" \"npm run client\"",
		"heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm install --prefix frontend && npm run build --prefix frontend && tsc",
		"prepare": "husky install"
	},
	"keywords": [
		"mern",
		"react",
		"redux",
		"express",
		"typescript",
		"mongodb"
	],
	"author": "jbrave",
	"license": "MIT",
	"devDependencies": {
		"@types/bcrypt": "^5.0.0",
		"@types/express": "^4.17.13",
		"@types/jsonwebtoken": "^8.5.8",
		"@types/node": "^17.0.18",
		"husky": "^7.0.4",
		"lint-staged": "^12.3.5",
		"nodemon": "^2.0.15",
		"prettier": "^2.5.1",
		"ts-node": "^10.5.0",
		"typescript": "^4.5.5"
	},
	"dependencies": {
		"bcrypt": "^5.0.1",
		"concurrently": "^7.0.0",
		"cors": "^2.8.5",
		"dotenv": "^16.0.0",
		"express": "^4.17.3",
		"express-async-handler": "^1.2.0",
		"jsonwebtoken": "^8.5.1",
		"mongoose": "^6.2.2"
	},
	"lint-staged": {
		"*.{ts,tsx,css,md}": "prettier -w"
	}
}
